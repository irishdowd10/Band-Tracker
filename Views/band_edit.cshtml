@{
  Layout ="shared/_Layout.cshtml";
}
<h2>Edit band: @Model.GetName()</h2>
<form action="/band/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="band-id" type="hidden" value="@Model.GetId()">
  <label for="band-name">Band name</label>
  <input id="band-name" name="band-name" type="text" required>
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
