@{
  Layout ="shared/_Layout.cshtml";
}
<h3>Bands:</h3>
<Ul>
@if (Model.Count != 0)
{

    @foreach (var band in Model)
    {
      <li><a href='/bands/@band.GetId()'>@band.GetName() | <a href="/band/edit/@band.GetId()">Edit</a> | <a href="/band/delete/@band.GetId()">Delete</a></li>
      }
}
    else
    {
    <h4> No bands listed, Please add one </h4>
    }
  </Ul>
<h4><a href="/bands/new">Add new band</a></h4>
<h4><a href="/">Return home</a></h4>
